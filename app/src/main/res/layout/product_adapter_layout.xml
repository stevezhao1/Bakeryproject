<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="5dp"
    android:background="@drawable/background_card"

    card_view:cardCornerRadius="5dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true"
    tools:ignore="MissingClass">


    <ImageView
        android:id="@+id/android_gridview_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="23dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toStartOf="@+id/android_gridview_text"
        card_view:layout_constraintHorizontal_bias="1.0"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_bias="0.465" />

    <TextView
        android:id="@+id/android_gridview_text"
        android:layout_width="212dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="64dp"

        android:paddingLeft="20dp"
        android:text="New Item"
        android:textColor="@color/material_blue_grey_700"
        android:textSize="20sp"
        card_view:layout_constraintBottom_toTopOf="@+id/android_gridview_price"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/android_gridview_price"
        android:layout_width="46dp"
        android:layout_height="26dp"
        android:layout_marginStart="149dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="12dp"
        android:paddingLeft="15dp"
        android:text="250 "
        android:textColor="@color/material_brown_900"
        android:textSize="15sp"
        android:textStyle="bold"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toStartOf="@+id/android_gridview_pricef"
        card_view:layout_constraintStart_toEndOf="@+id/android_gridview_image"
        card_view:layout_constraintTop_toBottomOf="@+id/android_gridview_text" />

    <TextView
        android:id="@+id/android_gridview_pricef"
        android:layout_width="34dp"
        android:layout_height="23dp"
        android:layout_marginEnd="32dp"
        android:text="USD"
        android:textColor="@color/material_blue_grey_700"
        android:textSize="13sp"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toEndOf="@+id/android_gridview_price"
        card_view:layout_constraintTop_toBottomOf="@+id/android_gridview_text"
        card_view:layout_constraintVertical_bias="0.545" />


</androidx.constraintlayout.widget.ConstraintLayout>
